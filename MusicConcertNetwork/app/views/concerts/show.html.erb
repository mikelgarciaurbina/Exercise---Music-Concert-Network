<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default panel-google-plus">
            <div class="panel-heading">
                <img class="img-circle pull-left" src="https://lh3.googleusercontent.com/-CxXg7_7ylq4/AAAAAAAAAAI/AAAAAAAAAQ8/LhCIKQC5Aq4/s46-c-k-no/photo.jpg" alt="Mouse0270" />
                <h3><%= @concert.artist %></h3>
                <h5><span><%= @concert.venue %> (<%= @concert.city %>)</span> - <span><%= @concert.date %></span> </h5>
            </div>
            <div class="panel-body">
                <p><%= @concert.description %></p>
            </div>
            <%= render partial: 'comments/index', :collection => @comments, :as => :record %>
            <%= render 'comments/new' %>
        </div>
    </div>
</div>